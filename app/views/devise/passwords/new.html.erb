<%= render 'shared/public_nav' %>

<div class="min-h-screen flex items-center justify-center relative overflow-hidden" style="background: linear-gradient(135deg, #1d3e4c 0%, #32505c 50%, #45606b 100%);">
  <!-- Animated background texture -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-20 left-20 w-96 h-96 bg-white rounded-full mix-blend-overlay filter blur-3xl animate-pulse"></div>
    <div class="absolute bottom-20 right-20 w-96 h-96 bg-white rounded-full mix-blend-overlay filter blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <!-- Reset Password Card -->
  <div class="relative z-10 w-full max-w-md mx-4">
    <!-- Logo/Brand -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-20 h-20 rounded-2xl mb-4 shadow-2xl" style="background-color: #F8796D;">
        <i class="fa-solid fa-otter text-4xl text-white"></i>
      </div>
      <h1 class="text-4xl font-bold text-white mb-2 display-font">Habit Beaver</h1>
      <p class="text-sm text-gray-300 font-light">Build better habits, one day at a time</p>
    </div>

    <!-- Card -->
    <div class="bg-white/95 backdrop-blur-sm rounded-2xl shadow-2xl p-8">
      <h2 class="text-2xl font-bold mb-6 display-font" style="color: #1d3e4c;">Reset Password</h2>
      <p class="text-sm mb-6" style="color: #657b84;">Enter your email and we'll send you instructions to reset your password.</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Email Field -->
        <div class="mb-6">
          <%= f.label :email, class: "block text-sm font-semibold mb-2", style: "color: #1d3e4c;" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-opacity-100 focus:outline-none transition font-light",
              style: "border-color: #E8EEF1; focus:border-color: #6B8A99;",
              placeholder: "you@example.com" %>
        </div>

        <!-- Submit Button -->
        <div class="mb-6">
          <%= f.submit "Send Reset Instructions", class: "w-full py-3 px-4 rounded-lg text-white font-semibold shadow-lg hover:shadow-xl transition transform hover:scale-[1.02] cursor-pointer", style: "background: linear-gradient(135deg, #1d3e4c, #45606b);" %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="text-center">
        <div class="pt-4 border-t border-gray-200">
          <p class="text-sm font-light mb-2" style="color: #566e78;">Remember your password?</p>
          <%= link_to "Sign In", new_session_path(resource_name), class: "inline-block px-6 py-2 rounded-lg font-semibold border-2 hover:bg-opacity-5 transition", style: "color: #1d3e4c; border-color: #6B8A99; background-color: rgba(107, 138, 153, 0.05);" %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes pulse {
    0%, 100% { opacity: 0.1; }
    50% { opacity: 0.15; }
  }
  .animate-pulse {
    animation: pulse 4s ease-in-out infinite;
  }
</style>
